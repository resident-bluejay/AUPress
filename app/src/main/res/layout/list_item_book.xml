<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@drawable/background_activated" >

    <TextView
        android:text="Book Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/book_list_item_titleTextView"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:text="Author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/book_list_item_authorTextView"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/book_list_item_titleTextView"
        app:layout_constraintHorizontal_bias="0.58"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"/>

    <TextView
        android:text="ISBN"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/book_list_item_isbnTextView"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/book_list_item_authorTextView"/>

    <TextView
        android:text="Price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/book_list_item_priceTextView"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/book_list_item_isbnTextView"/>

</android.support.constraint.ConstraintLayout>